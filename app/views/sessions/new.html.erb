<div style="
    height: 200px;
    width: 400px;
    position: fixed;
    top: 60%;
    left: 50%;
    margin-top: -100px;
    margin-left: -200px;
    ">
<div class="jumbotron">
	<h2 class="form-signin-heading">Please sign in</h2>
		<%= form_tag sessions_path, method: "update" do %>
        <label for="inputEmail" class="sr-only">Email address</label>
        <%= text_field_tag :email, nil, :class => "form-control", :placeholder => "Email address" %>
        <label for="inputPassword" class="sr-only">Password</label>
        <%= password_field_tag :password, nil, :class => "form-control", :placeholder => "Password" %>
        <div class="checkbox">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
          <label>
          <%= link_to 'Forget Password?', "retrieve" %>
          </label>
        </div>
       <%= button_tag "Sign In", class: "btn btn-lg btn-primary btn-block" %>
       <% end %>
	
</div>
</div>
