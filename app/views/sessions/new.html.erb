<div class="jumbotron">
	<h2>Sign In</h2>
	<hr>

	<%= form_tag sessions_path, method: "post" do %>

	<p>
		<%= label_tag :email %>
		<br>
		<%= text_field_tag :email %>
	</p>

	<p>
		<%= label_tag :password %>
		<br>
		<%= password_field_tag :password %>
	</p>

	<%= link_to "Forget Password?", logout_path %>
    <br><br>

	<%= button_tag "Sign In", class: "btn btn-success" %>
	<% end %>
</div>
