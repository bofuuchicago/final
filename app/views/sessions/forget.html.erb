<div style="
    height: 200px;
    width: 400px;
    position: fixed;
    top: 60%;
    left: 50%;
    margin-top: -100px;
    margin-left: -200px;
    ">
<div class="jumbotron">
	<h2 class="form-signin-heading">Please sign in</h2>
		<%= form_tag '/temporary', method: "post" do %>
        <label for="inputEmail" class="sr-only">Email address</label>
        <%= text_field_tag :email, nil, :class => "form-control", :placeholder => "Email address" %>
       <%= button_tag "Submit", class: "btn btn-lg btn-primary btn-block" %>
       <% end %>
	
</div>
</div>
